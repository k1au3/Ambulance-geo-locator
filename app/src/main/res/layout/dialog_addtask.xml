<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/ic_launcher" />



        //task venue/place
<!--        <EditText-->
<!--            android:id="@+id/et_name"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:hint="your name"-->
<!--            android:inputType="textLongMessage" />-->
        <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@color/colorThree"
        android:hint="Your name"
        android:background="@drawable/input_outline_grey"
            android:padding="15dp"/>
<!--        android:layout_marginTop="7dp"-->
<!--        android:layout_marginBottom="7dp"/>-->

<!--        <EditText-->
<!--            android:id="@+id/et_event"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:drawableRight="@color/colorThree"-->
<!--            android:hint="Event/partner"-->
<!--            android:inputType="textPersonName"-->
<!--            android:background="@drawable/input_outline_grey"-->
<!--            android:padding="15dp"/>-->

        <EditText
            android:id="@+id/et_idno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="your idno"
            android:drawableRight="@color/colorThree"
            android:background="@drawable/input_outline_grey"
            android:padding="15dp"
            android:inputType="textLongMessage" />



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your phone number"
                android:drawableRight="@color/colorThree"
                android:background="@drawable/input_outline_grey"
                android:padding="15dp"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/et_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">

            <EditText
                android:id="@+id/et_ambulance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ambulance services"
                android:drawableRight="@color/colorThree"
                android:background="@drawable/input_outline_grey"
                android:padding="15dp"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">

            <EditText
                android:id="@+id/et_appoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Appointment "
                android:drawableRight="@color/colorThree"
                android:background="@drawable/input_outline_grey"
                android:padding="15dp"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp">

            <EditText
                android:id="@+id/et_loca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:drawableRight="@color/colorThree"
                android:background="@drawable/input_outline_grey"
                android:padding="15dp"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp">

            <EditText
                android:id="@+id/et_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Number of patience"
                android:drawableRight="@color/colorThree"
                android:background="@drawable/input_outline_grey"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_emessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:drawableLeft="@drawable/ic_error"
        android:gravity="center"
        android:visibility="gone" />
        <ProgressBar
            android:id="@+id/progressp"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:indeterminate="true"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>